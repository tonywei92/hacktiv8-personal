<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Restaurant</title>
  </head>
  <body>
    <table style="width:100%">
      <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Menu Type</td>
        <td>Rating</td>
        <td>Price</td>
        <td>Restaurant ID</td>
        <td>Action</td>
      </tr>
      <% for(let i=0; i<data.length; i++) { %>
        <tr>
          <td><%= data[i].id %></td>
          <td><%= data[i].name %></td>
          <td><%= data[i].menu_type %></td>
          <td><%= data[i].rating %></td>
          <td><%= format_currency(data[i].price) %></td>
          <td><%= data[i].Restaurant.name %></td>
          <td><a href="/menus/<%= data[i].id %>/edit">Edit</td>
          <td><a href="/menus/<%= data[i].id %>/delete">Delete</td>
        </tr>
      <% } %>
    </table>

    <hr></hr>
    <% if(err) { %>
      <%= err %>
    <% } %>

    <form action="/menus" method="POST">
      Name: <input type="text" name="name">
      <br>
      Menu type:<input type="text" name="menu_type">
      <br>
      Rating: <input type="text" name="rating">
      <br>
      Price: <input type="text" name="price">
      <br>
      Restaurant: <select name="RestaurantId">
        <% for(let i=0; i<restaurants.length; i++) { %>
          <option value="<%= restaurants[i].id %>"><%= restaurants[i].name %></option>
        <% } %>
      </select>
      <br>
      <input type="submit" value="Submit">
    </form>

  </body>
</html>

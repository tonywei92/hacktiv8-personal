<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Restaurant</title>
  </head>
  <body>
	<h3>Menu Restaurant : <%= restaurant.name %></h3>

	<form action="/restaurants/<%= restaurant.id %>/search" method="POST" >
	  Search by: <select name="search_by">
        <option value="name">name</option>
        <option value="menu_type">menu_type</option>
        <option value="rating">rating</option>
        <option value="price">price</option>
      </select>
	  Keyword: <input type="text" name="keyword">
      <br>
      <input type="submit" value="Submit">
	</form>

	<hr></hr>

	<table style="width:100%">
      <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Menu Type</td>
        <td>Rating</td>
        <td>Price</td>
      </tr>
      <% for(let i=0; i<data.length; i++) { %>
        <tr>
          <td><%= data[i].id %></td>
          <td><%= data[i].name %></td>
          <td><%= data[i].menu_type %></td>
          <td><%= data[i].rating %></td>
          <td><%= format_currency(data[i].price) %></td>
        </tr>
      <% } %>
    </table>

  </body>
</html>

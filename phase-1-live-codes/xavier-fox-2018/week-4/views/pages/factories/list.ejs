<%- include('../../partials/head.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
  <h1> List Factories </h1>
  <table class="table table-striped">
    <thead style="text-align:center">
      <tr>
        <th scope="col">No</th>
        <th scope="col"><a href="<%=getQuery(query, 'name')%>">Name</a></th>
        <th scope="col"><a href="<%=getQuery(query, 'income')%>">Income</a></th>
        <th scope="col"><a href="<%=getQuery(query, 'outcome')%>">Outcome</a></th>
        <th scope="col">Profit</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody style="text-align:center">
      <% data.forEach(function(datum, index) { %>
        <tr scope="row">
          <td><%= index+1 %></td>
          <td><%= datum.name %></td>
          <td><%= rupiahFormat(datum.income) %></td>
          <td><%= rupiahFormat(datum.outcome) %></td>
          <td style="background-color:<%=getStatus(datum.profit)%>"><%= rupiahFormat(datum.profit) %></td>
          <td><button type="button" class="btn btn-info"><a href="/factories/detail/<%=datum.id%>" style="color:white">Detail</a></button></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include ../../partials/footer.ejs %>
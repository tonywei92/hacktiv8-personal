<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <div class="container">
    <%- include('../partials/header') %>
    <h2 class="mb-3">Employees</h2>
    <a href="/employees/add" class="btn btn-primary mb-4">Add an Employee</a>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Total Points</th>
            <th>Joined</th>
            <th class="text-center" width="140">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < employees.length; i++) { %>
              <% const employee = employees[i] %>
              <tr>
                <td><%= employee.id %></td>
                <td><%= employee.firstName %></td>
                <td><%= employee.lastName %></td>
                <td><%= employee.email %></td>
                <td><%= employee.totalPoints %></td>
                <td><%= formatDate(employee.createdAt) %></td>
                <td class="text-center">
                  <a href="/employees/<%= employee.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/employees/<%= employee.id %>/delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
              </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('../partials/scripts') %>
</body>
</html>

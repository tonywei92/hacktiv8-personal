<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <%- include('../partials/bootstrapCDN') %>
</head>
<body>
    <div class="container mt-2">
      <div class="container mb-10">
        <hr>
        <a href="/farms" class="btn btn-dark mx-auto">Back to Farms</a>
      </div>
      <div class="container mb-10">
        <hr>
        <h2> Diary Book - Days <%= farm.dayPlayed %> </h2>
        <hr>
        <a href="/farms/<%= farm.id %>/sleep" class="btn btn-dark mx-auto">Sleep</a>
      </div>
      <div class="container mb-10">
        <hr>
        <h2> Add Plant Forms </h2>
        <hr>
        <% for(let key in errQuery){ %>
          <p style="color: red;"><%= errQuery[key] %></p>
        <% } %>
        <form actions="" method="POST">
          <div class="form-group">
            <label for="plantName">Plant Name</label>
            <input type="text" class="form-control" id="plantName" placeholder="Plant Name..." name="name">
          </div>
          <div class="form-group">
            <label for="plantPrice">Price</label>
            <input type="number" class="form-control" id="plantPrice" placeholder="0" name="price">
          </div>
          <div class="form-group">
            <label for="timeToHarvest">Time To Harvest</label>
            <input type="number" class="form-control" id="timeToHarvest" placeholder="0" name="timeToHarvest">
          </div>
          <button type="submit" class="btn btn-dark mx-auto">Submit</button>
        </form>
      </div>
      <div class="container mt-2">
        <hr>
        <h2> Plant Lists </h2>
        <hr>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Plant Name</th>
              <th scope="col">Price</th>
              <th scope="col">Time To Harvest</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% farm.Plants.forEach(plant => { %> 
              <tr>
                <th scope="row"><%= plant.id %></th>
                <td><%= plant.name %></td>
                <td><%= plant.price %></td>
                <td><%= timeToHarvest(plant.timeToHarvest) %></td>
                <% if(!plant.timeToHarvest) { %>
                  <td><a class="btn btn-dark" href="/plants/<%=farm.id%>/<%=plant.id%>/harvest">Harvest</a></td>
                <% } else { %>
                  <td> Waiting </td>
                <% } %>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
</body>
</html>